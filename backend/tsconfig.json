{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "commonjs",
    "rootDir": "./",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false, // É true por padrão para que o build considere os erros de tipagem
    "skipLibCheck": true,
    "noEmitOnError": false // Por padrão não faz parte das configurações. Setado para permirtir os erros de tipagem
  }
}
